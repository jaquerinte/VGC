<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".informacion">


        <View
            android:id="@+id/separador1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/colaboradoresText"
            android:layout_below="@+id/separador1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/colaboradores"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <View
            android:id="@+id/separador2"
            android:layout_below="@+id/colaboradoresText"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fnac_logo"
            android:src="@drawable/fnac_logo"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/separador2"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pureGamingLogo"
            android:src="@drawable/pure_gaming_logo"
            android:layout_below="@+id/separador2"
            android:layout_toEndOf="@+id/fnac_logo"
            android:layout_alignBottom="@+id/fnac_logo"
            android:layout_toRightOf="@+id/fnac_logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/juventud_aliacnte_logo"
            android:src="@drawable/juventud_alicante"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/fnac_logo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/fnac_logo"
            android:layout_alignEnd="@+id/fnac_logo" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cultura_alicante"
            android:src="@drawable/cultura_alicante"
            android:layout_below="@+id/pureGamingLogo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="47dp"
            android:layout_toRightOf="@+id/juventud_aliacnte_logo"
            android:layout_toEndOf="@+id/juventud_aliacnte_logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cultura_elche"
            android:src="@drawable/elche_juventud_logo"
            android:layout_below="@+id/juventud_aliacnte_logo"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ayuntamiento_elche"
            android:src="@drawable/ayuntamiento_elche_logo"
            android:layout_alignTop="@+id/cultura_elche"
            android:layout_alignLeft="@+id/cultura_alicante"
            android:layout_alignStart="@+id/cultura_alicante"
            android:layout_marginTop="48dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ipo_logo"
            android:src="@drawable/ipo_logo"
            android:layout_below="@+id/cultura_elche"
            android:layout_centerHorizontal="true" />

        <View
            android:id="@+id/separador3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ipo_logo" />


    </RelativeLayout>

</ScrollView>
