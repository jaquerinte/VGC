<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".main_screen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invitadosEvento"
        android:id="@+id/buttonInvitados"
        android:clickable="false"
        android:layout_below="@+id/iconoprincipal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:width="@android:dimen/thumbnail_width"
        android:drawableLeft="@drawable/iconoprincipal30x30"/>

    <!-- TODO Volver a poner este en visible -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/horarios"
        android:id="@+id/buttonHoraio"
        android:enabled="false"
        android:visibility="gone"
        android:layout_below="@+id/buttonInvitados"
        android:layout_alignRight="@+id/buttonComprar"
        android:layout_alignEnd="@+id/buttonComprar"
        android:layout_marginTop="25dp"
        android:width="@android:dimen/thumbnail_width"
        android:drawableLeft="@drawable/iconoprincipal30x30"/>

    <!-- TODO Cambiar esto mas adelante para que este bajo del boton de horario-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dondeComprar"
        android:id="@+id/buttonComprar"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/buttonInvitados"
        android:layout_centerHorizontal="true"
        android:width="@android:dimen/thumbnail_width"
        android:drawableLeft="@drawable/entrada_icon30x30" />

    <!-- TODO Volver a ponerlo enabled -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/planoRecinto"
        android:id="@+id/buttonPlano"
        android:layout_below="@+id/buttonComprar"
        android:enabled="false"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:width="@android:dimen/thumbnail_width" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconoprincipal"
        android:src="@drawable/iconoprincipal"
        android:contentDescription="@string/imagenPrincipal"
        android:layout_marginTop="44dp"
        android:layout_centerHorizontal="true" />

    <!-- TODO Volver a ponerlo debajo del plano del recinto -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Como Llegar"
        android:id="@+id/buttonMap"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonComprar"
        android:contentDescription="@string/button_mapa"
        android:width="@android:dimen/thumbnail_width"
        android:drawableLeft="@drawable/maps30x30"/>


</RelativeLayout>
</ScrollView>
