<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:weightSum="1"
    tools:context=".comprar_screen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.17">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_comprar_fisico"
            android:id="@+id/button_comprarFisico"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:drawableTop="@drawable/entrada_icon"
            android:background="@android:color/black"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_comprar_online"
            android:id="@+id/button_comprarOnline"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="50dp"
            android:layout_alignTop="@+id/button_comprarFisico"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableTop="@drawable/ifa_online"
            android:background="@android:color/black"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</LinearLayout>